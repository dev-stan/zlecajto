div class="min-h-[60vh] py-10 px-4"
  div.max-w-6xl.mx-auto
    = turbo_frame_tag "task_wizard" do
      / Grid: 1 column on mobile, 4 columns on md+, wizard spans 1, content spans 3
      div.grid.grid-cols-1.md:grid-cols-4.gap-12.items-start
        aside.md:col-span-1
          = render Tasks::WizardStepsComponent.new(current_step: @step, task: @task)
        section.md:col-span-3
          div.w-full.max-w-4xl
            = render "tasks/steps/#{@step}", task: @task, categories: @categories, step: @step

            / Centralized navigation
            - nav_task_params = { category: @task.category, title: @task.title, description: @task.description, salary: @task.salary, due_date: @task.due_date, due_time_slot: @task.due_time_slot }
            div.mt-6.flex.items-center.justify-between.gap-4
              - if @step > 1
                = render Ui::ButtonComponent.new(text: 'Cofnij', path: new_task_path(step: @step - 1, task: nav_task_params), variant: :ghost, size: :md, html_options: { data: { turbo_frame: 'task_wizard' } })
              - else
                div
              - if @step < 4
                = render Ui::ButtonComponent.new(text: 'Dalej', submit: true, size: :md, html_options: { form: 'task_step_form' })
