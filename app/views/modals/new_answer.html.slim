= turbo_frame_tag 'modal' do
  = render Ui::FormModalComponent.new(title: t('.title')) do
    = form_with model: @answer, url: answers_path, method: :post, data: { turbo_frame: 'modal', controller: 'form-validation', action: 'submit->form-validation#validate' } do |f|
      .space-y-3
        = hidden_field_tag :authenticity_token, form_authenticity_token
        = f.hidden_field :submission_id, value: @submission.id
        div data-field-wrapper=""
          = render Input::InputComponent.new(name: 'answer[message]', type: 'textarea', label: t('.message_label'), placeholder: t('.message_placeholder'), rows: 5)
        = hidden_field_tag :step, 400
      .mt-4.flex.items-center.gap-3
         = render(Ui::ButtonComponent.new(text: t('shared.buttons.cancel'), variant: :blue, size: :sm, button: true, html_options: { class: 'w-full', data: { action: 'click->modal#close' } }))
         = render(Ui::ButtonComponent.new(text: t('shared.buttons.send'), variant: :green, size: :sm, submit: true, html_options: { class: 'w-full' }))
