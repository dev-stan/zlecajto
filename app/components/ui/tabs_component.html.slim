div(
  data-controller="tabs"
  data-tabs-default-tab-value=@default_tab
  data-tabs-active-class-value="text-white"
  data-tabs-inactive-class-value="text-gray-500 hover:text-gray-700"
)
  .flex.flex-row.justify-center.mb-6
    nav.relative.flex.p-1.bg-gray-200.rounded-full role="tablist"
      div(
        data-tabs-target="indicator"
        class="absolute top-1 bottom-1 left-0 bg-primary rounded-full shadow-sm transition-all duration-300 ease-[cubic-bezier(0.4,0,0.2,1)]"
      )
      - tabs.each do |tab|
        button.relative.z-10.rounded-full.px-6.py-2.text-sm.font-medium.transition-colors.duration-200.flex.items-center.gap-2.group(
          data-action="tabs#show"
          data-tabs-target="tab"
          data-tab=tab.id
          role="tab"
          aria-selected=(@default_tab == tab.id)
          class=(@default_tab == tab.id ? 'text-white' : 'text-gray-500 hover:text-gray-700')
        )
          = tab.label
          - if tab.count
            span.inline-flex.items-center.justify-center.px-2.py-0.5.rounded-full.text-xs.font-semibold(
              class="group-aria-selected:bg-white group-aria-selected:text-blue-600 bg-gray-200 text-gray-600"
            ) = tab.count

  - tabs.each do |tab|
    div(
      data-tabs-target="panel"
      data-tab=tab.id
      class=(@default_tab == tab.id ? '' : 'hidden')
    )
      = tab
